        </div>
        <!-- Hiraola's Single Product Tab Area End Here -->
        <!-- Begin Hiraola's Product Area Two -->
        <div class="hiraola-product_area hiraola-product_area-2 ">
        </div>
        <!-- Hiraola's Product Area Two End Here -->
    </div>
    <!-- Thêm SweetAlert2 -->
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    <!-- CSS tùy chỉnh cho SweetAlert2 và nút hết hàng -->
    <style>
        .swal2-popup {
            font-family: 'Lato', sans-serif;
            background: #f4f4f4;
            color: #595959;
            border: 1px solid #e5e5e5;
            border-radius: 8px;
        }

        .swal2-title {
            color: #333;
            font-size: 18px;
            font-weight: 700;
        }

        .swal2-content {
            color: #595959;
            font-size: 16px;
        }

        .swal2-confirm {
            background-color: #cda557 !important;
            color: #fff !important;
            border-radius: 3px !important;
            padding: 10px 20px !important;
            font-size: 12px !important;
            text-transform: uppercase !important;
            transition: all 0.3s ease-in !important;
        }

        .swal2-cancel {
            background-color: #595959 !important;
            color: #fff !important;
            border-radius: 3px !important;
            padding: 10px 20px !important;
            font-size: 12px !important;
            text-transform: uppercase !important;
            transition: all 0.3s ease-in !important;
        }

        .swal2-confirm:hover {
            background-color: #d5b473 !important;
        }

        .swal2-cancel:hover {
            background-color: #333 !important;
        }

        .swal2-icon.swal2-warning {
            color: #cda557 !important;
            border-color: #cda557 !important;
        }

        .swal2-icon.swal2-error {
            color: #ea3a3c !important;
            border-color: #ea3a3c !important;
        }

        /* Làm mờ và vô hiệu hóa nút khi hết hàng */
        .out-of-stock .qty-cart_btn {
            opacity: 0.5 !important;
            pointer-events: none !important;
            cursor: not-allowed !important;
            background-color: #ccc !important;
            border-color: #ccc !important;
        }

        .qty-cart_btn {
            cursor: pointer;
            padding: 10px 20px;
            background-color: #cda557;
            color: #fff;
            border: none;
            border-radius: 3px;
            text-transform: uppercase;
            font-size: 12px;
            transition: all 0.3s ease-in;
        }

            .qty-cart_btn:hover:not(:disabled) {
                background-color: #d5b473;
            }
    </style>

    <script>
        $(document).ready(function () {
            initializeStockStatus();

            // Gắn sự kiện click cho các nút tăng/giảm số lượng
            $('.qtybutton').on('click', function () {
                var $button = $(this);
                var $input = $button.parent().find('input.cart-plus-minus-box');
                var oldValue = parseInt($input.val()) || 1;
                var newVal;

                if ($button.hasClass('inc')) {
                    newVal = oldValue + 1;
                } else {
                    newVal = oldValue > 1 ? oldValue - 1 : 1;
                }

                $input.val(newVal);
            });
        });

        function initializeStockStatus() {
            const qtyArea = $('.qty-btn_area');
            const stock = parseInt(qtyArea.data('stock'));
            const cartButton = qtyArea.find('.qty-cart_btn');

            // Lấy số lượng trong giỏ hàng để khởi tạo
            $.ajax({
                url: '/Cart/GetCartItemQuantity',
                type: 'GET',
                data: { designId: qtyArea.data('product-id') },
                success: function (response) {
                    if (response.success) {
                        qtyArea.data('cart-quantity', response.quantity);
                        if (stock <= response.quantity) {
                            qtyArea.addClass('out-of-stock');
                            cartButton.prop('disabled', true).text('Hết hàng');
                        } else {
                            qtyArea.removeClass('out-of-stock');
                            cartButton.prop('disabled', false).text('Giỏ Hàng');
                        }
                    }
                },
                error: function () {
                    console.error('Không thể lấy số lượng trong giỏ hàng.');
                }
            });
        }

        function updateCartQuantityAndStock(designId) {
            const qtyArea = $('.qty-btn_area');
            const stock = parseInt(qtyArea.data('stock'));
            const cartButton = qtyArea.find('.qty-cart_btn');

            $.ajax({
                url: '/Cart/GetCartItemQuantity',
                type: 'GET',
                data: { designId: designId },
                success: function (response) {
                    if (response.success) {
                        qtyArea.data('cart-quantity', response.quantity);
                        if (stock <= response.quantity) {
                            qtyArea.addClass('out-of-stock');
                            cartButton.prop('disabled', true).text('Hết hàng');
                        } else {
                            qtyArea.removeClass('out-of-stock');
                            cartButton.prop('disabled', false).text('Giỏ Hàng');
                        }
                    }
                },
                error: function () {
                    console.error('Không thể cập nhật số lượng trong giỏ hàng.');
                }
            });
        }

        function addToCart(designId) {
            const qtyArea = $('.qty-btn_area');
            const cartButton = qtyArea.find('.qty-cart_btn');
            const stock = parseInt(qtyArea.data('stock'));
            const cartQuantity = parseInt(qtyArea.data('cart-quantity')) || 0;
            let quantity = parseInt($('.cart-plus-minus-box').val()) || 0;

            if (cartButton.prop('disabled')) {
                return; // Không thực hiện nếu nút bị vô hiệu hóa
            }

            if (quantity <= 0) {
                Swal.fire({
                    title: 'Lỗi',
                    text: 'Vui lòng chọn số lượng lớn hơn 0',
                    icon: 'error',
                    confirmButtonText: 'Đóng',
                    customClass: {
                        confirmButton: 'swal2-confirm'
                    }
                });
                return;
            }

            // Tính số lượng tối đa có thể thêm
            const maxAddable = stock - cartQuantity;
            if (cartQuantity + quantity > stock) {
                if (maxAddable <= 0) {
                    Swal.fire({
                        title: 'Thông báo',
                        text: `Hàng này chỉ còn ${stock} và bạn đã thêm vào giỏ hàng với số lượng tối đa.`,
                        icon: 'warning',
                        confirmButtonText: 'Đóng',
                        customClass: {
                            confirmButton: 'swal2-confirm'
                        }
                    });
                    qtyArea.addClass('out-of-stock');
                    cartButton.prop('disabled', true).text('Hết hàng');
                    return;
                }

                // Thêm số lượng tối đa còn lại
                quantity = maxAddable;
                Swal.fire({
                    title: 'Thông báo',
                    text: `Hàng này chỉ còn ${stock} và đã được thêm ${quantity} vào giỏ hàng với số lượng tối đa.`,
                    icon: 'warning',
                    confirmButtonText: 'Đóng',
                    customClass: {
                        confirmButton: 'swal2-confirm'
                    }
                });
            }

            $.ajax({
                url: '/Cart/AddToCart',
                type: 'POST',
                data: {
                    designId: designId,
                    quantity: quantity,
                    productType: false
                },
                headers: {
                    'RequestVerificationToken': $('input[name="__RequestVerificationToken"]').val()
                },
                success: function (response) {
                    if (response.success) {
                        Swal.fire({
                            title: 'Thành công',
                            text: 'Sản phẩm đã được thêm vào giỏ hàng!',
                            icon: 'success',
                            confirmButtonText: 'Đóng',
                            customClass: {
                                confirmButton: 'swal2-confirm'
                            }
                        });
                        updateCartCount();
                        updateCartQuantityAndStock(designId);
                    } else {
                        Swal.fire({
                            title: 'Lỗi',
                            text: response.message,
                            icon: 'error',
                            confirmButtonText: 'Đóng',
                            customClass: {
                                confirmButton: 'swal2-confirm'
                            }
                        });
                    }
                },
                error: function (xhr) {
                    if (xhr.status === 401) {
                        Swal.fire({
                            title: 'Yêu cầu đăng nhập',
                            text: 'Vui lòng đăng nhập để thêm sản phẩm vào giỏ hàng.',
                            icon: 'warning',
                            showCancelButton: true,
                            confirmButtonText: 'Đăng nhập',
                            cancelButtonText: 'Đóng',
                            customClass: {
                                confirmButton: 'swal2-confirm',
                                cancelButton: 'swal2-cancel'
                            }
                        }).then((result) => {
                            if (result.isConfirmed) {
                                window.location.href = '/Auth/Register';
                            }
                        });
                    } else {
                        Swal.fire({
                            title: 'Lỗi',
                            text: 'Có lỗi xảy ra, vui lòng thử lại.',
                            icon: 'error',
                            confirmButtonText: 'Đóng',
                            customClass: {
                                confirmButton: 'swal2-confirm'
                            }
                        });
                    }
                }
            });
        }

        function updateCartCount() {
            $.ajax({
                url: '/Cart/GetCartItemCount',
                type: 'GET',
                success: function (response) {
                    if (response.success) {
                        $('#cart-count').text(response.count);
                    } else {
                        $('#cart-count').text('0');
                    }
                },
                error: function () {
                    $('#cart-count').text('0');
                }
            });
        }
    </script>
</body>